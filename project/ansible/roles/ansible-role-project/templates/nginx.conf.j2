# /etc/nginx/sites-available/app
# if change this file execute in server -> service nginx reload
upstream django {
    server unix:///tmp/django.socket; # for a file socket
}

upstream websocket {
    server unix:///tmp/web.socket;
}

server {
    listen 80;
    server_name {{ server_name }};

    location /static/ {
        root {{ home }}/{{ project_name }}/static/;
    }

    location /media/ {
        root {{ home }}/{{ project_name }}/media/;
    }

    location / {
        proxy_set_header X-Forwarded-Host $host:$server_port;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://django;
        proxy_redirect / http://django;
        proxy_ignore_client_abort on;
    }

    location /ws/ {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $http_connection;

        proxy_pass http://websocket;

        proxy_http_version 1.1;
        proxy_set_header Origin "{{ origin }}";
        proxy_ignore_client_abort on;
    }
}